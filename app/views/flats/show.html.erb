<div class="banner map">

</div>

<div class="container margin-top-negative">
  <div class="row">

    <div class="col-8">
      <div class="info">
        <div class="card bg-light p-3">
          <h1><%= @flat.name %></h1>
          <p><%= @flat.address %></p>
        </div>
        <div class="card bg-light p-3 mt-3">
          <h3>A bit more about this flat...</h3>
          <p><%= @flat.description %></p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="booking">

        <div class="card bg-light">
          <h5>Book this place</h5>
          <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
        </div>

        <div class="card bg-light mt-3">
          <h3>Details</h3>
          <div class="d-flex">
            <i class="fas fa-user-friends mr-3"></i>
            <span><%= @flat.number_of_guests %></span>
            <i class="fas fa-dollar-sign"></i>
            <p><%= @flat.price_per_night %></p>
          </div>
        </div>

        <div class="card bg-light mt-3">
          <div class="d-flex align-items-center justify-content-between">
            <h6>Share</h6>
            <div class="d-flex">
              <i class="fab fa-facebook-square"></i>
              <i class="fab fa-twitter-square"></i>
              <i class="fab fa-pinterest-square"></i>
              <i class="fas fa-envelope"></i>
            </div>
        </div>

      </div>
    </div>

  </div>

</div>
